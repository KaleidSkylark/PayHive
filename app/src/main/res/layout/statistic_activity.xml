<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/Background"
    tools:context=".StatisticActivity">

    <View
        android:id="@+id/topViewProfileStatistics"
        android:layout_width="409dp"
        android:layout_height="119dp"
        android:background="@drawable/profile_rectangle"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/navigation_bar"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:background="@drawable/navigation_rectangle"
        app:layout_constraintBottom_toBottomOf="parent" />


    <View
        android:id="@+id/balance_bar"
        android:layout_width="370dp"
        android:layout_height="150dp"
        android:layout_marginStart="50dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="50dp"
        android:background="@drawable/balance_rectangle"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.423"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/topViewProfileStatistics" />

    <TextView
        android:id="@+id/texttotalbalanceStatistics"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="90dp"
        android:fontFamily="@font/baloo"
        android:text="Total Balance"
        android:textColor="#FFFFFF"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="@+id/balance_bar"
        app:layout_constraintHorizontal_bias="0.087"
        app:layout_constraintStart_toStartOf="@+id/balance_bar"
        app:layout_constraintTop_toTopOf="@+id/balance_bar" />

    <TextView
        android:id="@+id/textstonksStatistics"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="110dp"
        android:layout_marginEnd="90dp"
        android:background="@drawable/bg_rounded_green"
        android:fontFamily="@font/baloo"
        android:text="+46.54%"
        android:textColor="#FFFFFF"
        android:textSize="15sp"
        app:layout_constraintEnd_toEndOf="@+id/balance_bar"
        app:layout_constraintHorizontal_bias="0.052"
        app:layout_constraintStart_toStartOf="@+id/balance_bar"
        app:layout_constraintTop_toTopOf="@+id/balance_bar"
        tools:ignore="TextContrastCheck" />

    <TextView
        android:id="@+id/textBalanceStatistics"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="52dp"
        android:layout_marginEnd="90dp"
        android:fontFamily="@font/baloo"
        android:text="â‚± 369,543.00"
        android:textColor="#FFFFFF"
        android:textSize="40sp"
        app:layout_constraintEnd_toEndOf="@+id/balance_bar"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/balance_bar"
        app:layout_constraintTop_toTopOf="@+id/balance_bar" />

    <ImageView
        android:id="@+id/imageViewarrow1Statistics"
        android:layout_width="20dp"
        android:layout_height="15dp"
        android:layout_marginEnd="176dp"
        android:layout_marginBottom="5dp"
        android:rotation="180"
        app:layout_constraintBottom_toBottomOf="@+id/balance_bar"
        app:layout_constraintEnd_toEndOf="@+id/balance_bar"
        app:srcCompat="@drawable/arrow" />

    <TextView
        android:id="@+id/textProfileViewStatistics"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="35dp"
        android:fontFamily="@font/baloo"
        android:text="Statistics"
        android:textColor="#FFFFFF"
        android:textSize="30sp"
        app:layout_constraintEnd_toEndOf="@id/topViewProfileStatistics"
        app:layout_constraintStart_toStartOf="@id/topViewProfileStatistics"
        app:layout_constraintTop_toTopOf="@id/topViewProfileStatistics" />

    <ImageView
        android:id="@+id/imageProfileButtonStatistics"
        android:layout_width="65dp"
        android:layout_height="35dp"
        android:layout_marginTop="35dp"
        android:layout_marginEnd="15dp"
        app:layout_constraintEnd_toEndOf="@id/topViewProfileStatistics"
        app:layout_constraintTop_toTopOf="@id/topViewProfileStatistics"
        app:srcCompat="@drawable/profile" />

    <ImageButton
        android:id="@+id/ibStats"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginStart="50dp"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:background="@android:color/transparent"
        android:scaleType="fitCenter"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/ibWallet"
        app:layout_constraintTop_toTopOf="@+id/navigation_bar"
        app:srcCompat="@drawable/stats"
        tools:ignore="SpeakableTextPresentCheck" />

    <ImageButton
        android:id="@+id/ibWallet"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_gravity="center"
        android:layout_marginStart="30dp"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:background="@android:color/transparent"
        android:scaleType="fitCenter"
        app:layout_constraintBottom_toBottomOf="@+id/navigation_bar"
        app:layout_constraintStart_toStartOf="@+id/navigation_bar"
        app:layout_constraintTop_toTopOf="@+id/navigation_bar"
        app:srcCompat="@drawable/wallet"
        tools:ignore="SpeakableTextPresentCheck" />

    <ImageButton
        android:id="@+id/ibDiscover"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginStart="50dp"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:background="@android:color/transparent"
        android:scaleType="fitCenter"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/ibStats"
        app:layout_constraintTop_toTopOf="@+id/navigation_bar"
        app:srcCompat="@drawable/discover"
        tools:ignore="SpeakableTextPresentCheck" />

    <ImageButton
        android:id="@+id/ibSettings"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginStart="50dp"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:background="@android:color/transparent"
        android:scaleType="fitCenter"
        app:layout_constraintBottom_toBottomOf="@+id/navigation_bar"
        app:layout_constraintStart_toEndOf="@+id/ibDiscover"
        app:layout_constraintTop_toTopOf="@+id/navigation_bar"
        app:srcCompat="@drawable/settings"
        tools:ignore="SpeakableTextPresentCheck" />

    <ImageButton
        android:id="@+id/imageButton"
        android:layout_width="66dp"
        android:layout_height="45dp"
        android:background="@android:color/transparent"
        android:rotation="270"
        android:scaleType="fitCenter"
        app:srcCompat="@drawable/arrow"
        tools:ignore="SpeakableTextPresentCheck"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="25dp" />

</android.support.constraint.ConstraintLayout>