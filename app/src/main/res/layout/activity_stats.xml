<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/Background"
    tools:context=".StatsActivity">

    <View
        android:id="@+id/topViewProfile"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@drawable/profile_rectangle"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHeight_percent="0.15"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textProfileView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="35dp"
        android:fontFamily="@font/baloo"
        android:text="Statistics"
        android:textColor="#FFFFFF"
        android:textSize="30sp"
        app:layout_constraintEnd_toEndOf="@id/topViewProfile"
        app:layout_constraintStart_toStartOf="@id/topViewProfile"
        app:layout_constraintTop_toTopOf="@id/topViewProfile" />


    <ImageButton
        android:id="@+id/imageButtonBack"
        android:layout_width="48dp"
        android:layout_height="39dp"
        android:layout_marginStart="32dp"
        android:layout_marginTop="40dp"
        android:background="@android:color/transparent"
        android:rotation="270"
        android:scaleType="fitCenter"
        app:layout_constraintStart_toStartOf="@+id/topViewProfile"
        app:layout_constraintTop_toTopOf="@+id/topViewProfile"
        app:srcCompat="@drawable/arrow"
        tools:ignore="SpeakableTextPresentCheck" />

    <ImageView
        android:id="@+id/imageProfileButton"
        android:layout_width="65dp"
        android:layout_height="35dp"
        android:layout_marginTop="35dp"
        android:layout_marginEnd="15dp"
        app:layout_constraintEnd_toEndOf="@id/topViewProfile"
        app:layout_constraintTop_toTopOf="@id/topViewProfile"
        app:srcCompat="@drawable/profile" />

    <View
        android:id="@+id/balance_bar"
        android:layout_width="319dp"
        android:layout_height="132dp"
        android:layout_marginStart="50dp"
        android:layout_marginTop="28dp"
        android:layout_marginEnd="50dp"
        android:background="@drawable/balance_rectangle"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/topViewProfile" />


    <TextView
        android:id="@+id/texttotalbalance"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="90dp"
        android:fontFamily="@font/baloo"
        android:text="Bitcoin"
        android:textColor="#FFFFFF"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="@+id/balance_bar"
        app:layout_constraintHorizontal_bias="0.37"
        app:layout_constraintStart_toStartOf="@+id/balance_bar"
        app:layout_constraintTop_toTopOf="@+id/balance_bar" />

    <TextView
        android:id="@+id/textstonks"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="100dp"
        android:layout_marginEnd="90dp"
        android:background="@drawable/bg_rounded_green"
        android:fontFamily="@font/baloo"
        android:text="+13.69%"
        android:textColor="#FFFFFF"
        android:textSize="15sp"
        app:layout_constraintEnd_toEndOf="@+id/balance_bar"
        app:layout_constraintHorizontal_bias="0.155"
        app:layout_constraintStart_toStartOf="@+id/balance_bar"
        app:layout_constraintTop_toTopOf="@+id/balance_bar"
        tools:ignore="TextContrastCheck" />

    <TextView
        android:id="@+id/textBalance"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="52dp"
        android:layout_marginEnd="80dp"
        android:fontFamily="@font/baloo"
        android:text="₱ 35,120.22"
        android:textColor="#FFFFFF"
        android:textSize="35sp"
        app:layout_constraintEnd_toEndOf="@+id/balance_bar"
        app:layout_constraintTop_toTopOf="@+id/balance_bar" />

    <!-- Statistics Area-->

    <View
        android:id="@+id/stats_bar"
        android:layout_width="318dp"
        android:layout_height="274dp"
        android:layout_marginStart="50dp"
        android:layout_marginTop="60dp"
        android:layout_marginEnd="50dp"
        android:background="@drawable/coins_rectangle"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.571"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/balance_bar" />

    <ImageView
        android:id="@+id/imageViewarrow1"
        android:layout_width="20dp"
        android:layout_height="15dp"
        android:layout_marginEnd="150dp"
        android:layout_marginBottom="5dp"
        android:rotation="180"
        app:layout_constraintBottom_toBottomOf="@+id/balance_bar"
        app:layout_constraintEnd_toEndOf="@+id/balance_bar"
        app:srcCompat="@drawable/arrow" />

    <RelativeLayout
        android:id="@+id/navigation_bar"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:background="@drawable/navigation_rectangle"
        android:gravity="center"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <ImageButton
            android:id="@+id/ibWallet"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_alignParentStart="true"
            android:background="@android:color/transparent"
            android:scaleType="fitCenter"
            android:src="@drawable/wallet"
            tools:ignore="SpeakableTextPresentCheck" />

        <ImageButton
            android:id="@+id/ibStats"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginStart="40dp"
            android:layout_toEndOf="@id/ibWallet"
            android:background="@android:color/transparent"
            android:scaleType="fitCenter"
            android:src="@drawable/stats"
            tools:ignore="SpeakableTextPresentCheck" />

        <ImageButton
            android:id="@+id/ibDiscover"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginStart="40dp"
            android:layout_toEndOf="@id/ibStats"
            android:background="@android:color/transparent"
            android:scaleType="fitCenter"
            android:src="@drawable/discover"
            tools:ignore="SpeakableTextPresentCheck" />

        <ImageButton
            android:id="@+id/ibSettings"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginStart="40dp"
            android:layout_toEndOf="@id/ibDiscover"
            android:background="@android:color/transparent"
            android:scaleType="fitCenter"
            android:src="@drawable/settings"
            tools:ignore="SpeakableTextPresentCheck" />

    </RelativeLayout>

    <ImageView
        android:id="@+id/imageViewBitconBal"
        android:layout_width="53dp"
        android:layout_height="58dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        app:layout_constraintStart_toStartOf="@+id/balance_bar"
        app:layout_constraintTop_toTopOf="@+id/balance_bar"
        app:srcCompat="@drawable/bitcoin" />

    <TextView
        android:id="@+id/textViewDays"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/baloo"
        android:text="Day                    Week                    Month                    Year"
        android:textColor="#FAFAFA"
        android:textSize="12sp"
        app:layout_constraintBottom_toTopOf="@+id/stats_bar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/balance_bar" />

    <ImageView
        android:id="@+id/imageViewChart"
        android:layout_width="317dp"
        android:layout_height="197dp"
        app:layout_constraintBottom_toBottomOf="@+id/stats_bar"
        app:layout_constraintEnd_toEndOf="@+id/stats_bar"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/stats_bar"
        app:srcCompat="@drawable/statschart" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        android:layout_marginTop="30dp"
        android:fontFamily="@font/baloo"
        android:text="₱ 567.56"
        android:textColor="#FF0000"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="@+id/stats_bar"
        app:layout_constraintTop_toTopOf="@+id/stats_bar" />

    <TextView
        android:id="@+id/textView8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="30dp"
        android:fontFamily="@font/baloo"
        android:text="₱ 5,351.12"
        android:textColor="#00BF63"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="@+id/stats_bar"
        app:layout_constraintTop_toTopOf="@+id/stats_bar" />

</android.support.constraint.ConstraintLayout>